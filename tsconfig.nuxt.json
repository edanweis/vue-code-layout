{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": false,
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": true,
    "types": ["@nuxt/types", "@types/node"],
    "baseUrl": ".",
    "paths": {
      "#app": ["./nuxt/runtime/types.d.ts"],
      "#imports": ["./nuxt/runtime/types.d.ts"],
      "@/*": ["./*"]
    },
    "outDir": "lib/nuxt",
    "declaration": true,
    "declarationDir": "lib/nuxt"
  },
  "include": [
    "nuxt/**/*",
    "library/**/*",
    "nuxt/runtime/types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
} 